@model A4AAssessment.Models.BusinessEntity
@{
    ViewBag.Title = "Agent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/App_Themes/Theme1/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
<link href="~/Css/FormDesign.css" rel="stylesheet" />
<style>
    table.dataTable.select tbody tr,
    table.dataTable thead th:first-child {
        cursor: pointer;
    }

    .dataTables_scrollBody > table > thead > tr > th[class*="sort"]::after {
        display: none;
    }

    .form-control {
        border: 1px solid #00ffff;
    }

    .col-md-12 {
        padding: 0 !important;
    }

    .required:after {
        content: " *";
        font-weight: bold;
        color: red;
    }
</style>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-11">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important; text-decoration: none;">Agent Info</text>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="col-md-12">
                                <label class="col-md-4 required">Id/Code</label>
                                <div class="input-group form-group col-md-8" style="padding-left:1px;">
                                    @*<input type="text" class="form-control" id="Code" name="Code" value="@ViewBag.Code" required="required" />*@
                                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control col-md-3 select2" })
                                    @Html.HiddenFor(x => x.BusinessId)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4 required">Name</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4 required">Markup Plan</label>
                                <div class="input-group form-group col-md-8" style="padding-left:1px;">
                                    @Html.DropDownListFor(x => x.MarkUpId, null, "---- Select ----", new { @class = "form-control select2", @Value = ViewBag.MarkUpId })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4 required">Email</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4 required">Mobile</label>
                                <div class="input-group form-group col-md-8" style="padding-left:1px;">
                                    @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4">Phone</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4 required">Address</label>
                                <div class="input-group form-group col-md-8" style="padding-left:1px;">
                                    @Html.TextBoxFor(x => x.Street, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4">City</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.City, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4">State</label>
                                <div class="input-group form-group col-md-8" style="padding-left:1px;">
                                    @Html.TextBoxFor(x => x.State, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4">Post Code</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.Zip, new { @class = "form-control col-md-3 select2" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-4 required">Opening Balance</label>
                                <div class="input-group form-group col-md-8">
                                    @Html.TextBoxFor(x => x.Balance, new { @class = "form-control col-md-3 select2", @type = "number" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <legend>Flights APIs</legend>

                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="checkbox checkbox-primary">
                                            <input id="CreditPur" type="checkbox" name="CreditPur" /><label>Regent</label>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="checkbox checkbox-primary">
                                            <input id="CreditPur" type="checkbox" name="CreditPur" /><label>Novo</label>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="checkbox checkbox-primary">
                                            <input id="CreditPur" type="checkbox" name="CreditPur" /><label>Gelileo</label>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="checkbox checkbox-primary">
                                            <input id="CreditPur" type="checkbox" name="CreditPur" /><label>USB-S</label>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="checkbox checkbox-primary">
                                            <input id="CreditPur" type="checkbox" name="CreditPur" /><label>Indigo</label>

                                        </div>
                                    </div>
                                </div>

                            </fieldset>

                            <fieldset>
                                <legend>Agent Type</legend>

                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="radio radio-primary">
                                            <input id="AT_B2B" type="radio" value="B2B" name="agentType" /><label>B2B</label>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="radio radio-primary">
                                            <input id="AT_B2C" type="radio" value="B2C" name="agentType" /><label>B2C</label>

                                        </div>
                                    </div>
                                </div>


                            </fieldset>


                            <fieldset>
                                <legend>Status</legend>

                                <div class="col-md-12">
                                    <div class="col-md-3">
                                        <div class="radio radio-primary">
                                            <input id="CreditPur" type="radio" name="Status" checked="checked" /><label>New</label>

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="radio radio-primary">
                                            <input id="CreditPur" type="radio" name="Status" /><label>Active</label>

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="radio radio-primary">
                                            <input id="CreditPur" type="radio" name="Status" /><label>InActive</label>

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="radio radio-primary">
                                            <input id="CreditPur" type="radio" name="Status" /><label>Locked</label>

                                        </div>
                                    </div>
                                </div>

                            </fieldset>

                        </div>

                        <div class="row col-md-12">
                            <div class="col-md-10" style="text-align:center;margin-bottom:10px;overflow:hidden">
                                <input type="button" value="Save" class="btn btn-primary" id="btnSave" style="width:100px;" />
                                <input type="button" value="Update" class="btn btn-primary" id="btnUpdate" style="width:100px;" />
                                <input type="button" value="Clear" class="btn btn-primary" id="btnClear" style="width:100px;" />
                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="col-md-12" style="margin-bottom:5px; border:1px solid; border-color:#adcceb; width:100%">
                                <div class="row" style="padding:18px">
                                    <div class="col-md-12">
                                        <br />
                                        <table class="table table-bordered table-responsive" id="AgentListDatatable" style="width:100%">
                                            <thead>
                                                <tr>

                                                    <th>SL</th>
                                                    <th width="5%">Joined&nbsp;On</th>
                                                    <th width="10%">Code</th>
                                                    <th width="20%">Name</th>
                                                    <th width="20%">Markup&nbsp;Plan</th>
                                                    <th width="10%">Mobile</th>
                                                    <th width="15%">Email</th>
                                                    <th width="10%">Balance</th>
                                                    <th width="10%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbodyId"></tbody>

                                        </table>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

}


@section scripts{
    <script src="~/App_Themes/Theme1/plugins/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/App_Themes/Theme1/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.bootstrap.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/pdfmake.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/vfs_fonts.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.html5.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/buttons.print.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.fixedHeader.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.keyTable.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/responsive.bootstrap.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.scroller.min.js"></script>
    <script type="text/javascript" src="../App_Themes/Theme1/plugins/parsleyjs/dist/parsley.min.js"></script>
    <!-- Datatable init js -->
    <script src="../App_Themes/Theme1/blue/assets/pages/datatables.init.js"></script>

    <script>
        $(document).ready(function () {
            function select2Focus() {
                var select2 = $(this).data('select2');
                setTimeout(function () {
                    if (!select2.opened()) {
                        select2.open();
                    }
                }, 0);
            }

            $("input:text:visible:first").focus();
            $("#btnUpdate").hide();
            $("#Balance").val(0);
            $("#MarkUpId").select2().one('select2-focus', select2Focus).on("select2-blur", function () { $(this).one('select2-focus', select2Focus) });

            var loadInfo = {
                BusinessId: "",
                Code: "",
                Email: "",
                Name: "",
                Street: "",
                City: "",
                State: "",
                Zip: "",
                Country: "",
                Mobile: "",
                Phone: "",
                MarkUpId: "",
                Balance: ""
            };
            function setOrder() {
                loadInfo.Code = $("#Code").val();
                loadInfo.Email = $("#Email").val();
                loadInfo.Name = $("#Name").val();
                loadInfo.Street = $("#Street").val();
                loadInfo.City = $("#City").val();
                loadInfo.State = $("#State").val();
                loadInfo.Zip = $("#Zip").val();
                loadInfo.Country = $("#Country").val();
                loadInfo.Mobile = $("#Mobile").val();
                loadInfo.Phone = $("#Phone").val();
                loadInfo.MarkUpId = $("#MarkUpId").val();
                loadInfo.Balance = $("#Balance").val();
                loadInfo.AgentType = $("#AgentType").val();
            }

            function validateOnAgent(validOrder) {

                if (validOrder.Code.trim() == "") {
                    return "Code is Required";
                }
                if (validOrder.Name.trim() == "") {
                    return "Name is Required";
                }
                if (validOrder.MarkUpId.trim() == "") {
                    return "Markup Plan is Required";
                }
                if (validOrder.Email.trim() == "") {
                    return "Email is Required";
                }
                if (validOrder.Mobile.trim() == "") {
                    return "Mobile No is Required";
                }
                if (validOrder.Street.trim() == "") {
                    return "Address is Required";
                }
                if (validOrder.Balance.trim() == "" || validOrder.Balance.trim() < 0) {
                    return "Balance is Required.";
                }
                return "";

            }

            $('#datatable').DataTable({
                responsive: true
            });

            //***************************************** Save *************************************


            $(document).on("click", "#btnSave", function () {
                setOrder();
                var validate = validateOnAgent(loadInfo);
                if (validate != "") {
                    alert(validate);
                    return;
                }

                if ($("#AT_B2B").prop("checked") == true) {
                    loadInfo.AgentType = $("#AT_B2B").val();
                }
                if ($("#AT_B2C").prop("checked") == true) {
                    loadInfo.AgentType = $("#AT_B2C").val();
                }
                if (loadInfo != null) {
                    $.ajax({
                        url: '@Url.Action("SaveAgentInfo", "Agent")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ BusinessEntity: loadInfo }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas.Satatus == 1 && datas.Msg != "") {
                                swal({
                                    title: "Ok",
                                    text: datas.Msg,
                                    type: "success"
                                },
                            function () {
                                clearAgent();
                            });
                            }
                            else if (datas.Satatus == 0 && datas.Msg != "") {
                                swal({
                                    title: "Sorry",
                                    text: datas.Msg,
                                    type: "warning"
                                });
                            }
                            else {
                                swal({
                                    title: "Sorry",
                                    text: datas,
                                    type: "warning"
                                });
                            }
                        }
                    });
                } else {
                    swal(
                        'Sorry!',
                        'All (*) field are required. These Fields can not be empty!',
                        'warning'
                        );
                }

            });

            //***************************************** Update *************************************

            $(document).on("click", "#btnUpdate", function () {

                setOrder();
                loadInfo.BusinessId = $("#BusinessId").val();
                var validate = validateOnAgent(loadInfo);
                if (validate != "") {
                    alert(validate);
                    return;
                }

                if ($("#AT_B2B").prop("checked") == true) {
                    loadInfo.AgentType = $("#AT_B2B").val();
                }
                if ($("#AT_B2C").prop("checked") == true) {
                    loadInfo.AgentType = $("#AT_B2C").val();
                }
                if (loadInfo != null) {
                    $.ajax({
                        url: '@Url.Action("UpdateAgentInfo", "Agent")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ BusinessEntity: loadInfo }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas.Satatus == 1 && datas.Msg != "") {
                                swal({
                                    title: "Ok",
                                    text: datas.Msg,
                                    type: "success"
                                },
                                function () {
                                    clearAgent();
                                });
                            } else {
                                swal({
                                    title: "Sorry",
                                    text: datas,
                                    type: "warning"
                                });
                            }
                        }
                    });
                } else {
                    swal(
                        'Sorry!',
                        'All (*) field are required. These Fields can not be empty!',
                        'warning'
                        );
                }
            });



            //***************************************** dataTable *************************************

            $('#AgentListDatatable').dataTable({
                "scrollX": true,
                "destroy": true,
                "columns": [
                           { "data": null, "bSortable": false },
                           {
                               "data": "CreatedOnUtc"
                           },
                           { "data": "Code" },
                           { "data": "Name" },
                           { "data": "MarkUpPlanName" },
                           { "data": "Mobile" },
                           { "data": "Email" },
                           { "data": "Balance" },
                           {
                               mRender: function (data, type, row) {
                                   return '<a href="#" class="on-default remove-row deleteSup" data-id="1" id="edit" value="' + row.BusinessId + '"><i class="glyphicon glyphicon-edit"></i></a>'
                                         + ' &emsp;<a href="#" class="on-default remove-row deleteSup largeSpace" data-id="1" id="delete" value="' + row.BusinessId + '">'
                                         + ' <i class="glyphicon glyphicon-trash"></i> </a> '
                               }
                           }
                ],
                "columnDefs": [{
                    "targets": 7,
                    "className": "text-right",
                }],
                "fnCreatedRow": function (row, data, index) {
                    $('td', row).eq(0).html(index + 1);
                }
            });


            loadGridByVNo();
            function loadGridByVNo() {
                $.ajax({
                    url: '@Url.Action("GetAgentListData", "Agent")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({}),
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {

                        if (data.data.length >= 0) {
                            var table = $('#AgentListDatatable').DataTable();
                            table.clear();
                            table.rows.add(data.data).draw();


                        }

                    }
                });
            }

            //***************************************** Edit *************************************
            $(document).on('click', "#edit", function () {
                var id = $(this).attr("value");
                $.ajax({
                    url: '@Url.Action("GetItemById", "Agent")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ BusinessId: id }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas != null) {
                            $("#BusinessId").val(datas.BusinessId);
                            $("#Code").val(datas.Code);
                            $("#Name").val(datas.Name);
                            $("#Email").val(datas.Email);
                            $("#Street").val(datas.Street);
                            $("#City").val(datas.City);
                            $("#State").val(datas.State);
                            $("#Zip").val(datas.Zip);
                            $("#Country").val(datas.Country);
                            $("#Mobile").val(datas.Mobile);
                            $("#Phone").val(datas.Phone);
                            $("#Balance").val(datas.Balance);
                            $("#MarkUpId").val(datas.MarkUpId).trigger('change.select2');
                            var AgentType = datas.AgentType;
                            if (AgentType == "B2B") {
                                $("#AT_B2B").prop('checked', true);
                            }
                            if (AgentType == "B2C") {
                                $("#AT_B2C").prop('checked', true);
                            }
                            //var AgentStatus = datas.AgentStatus;
                            //if (AgentStatus == "AT_B2B") {
                            //    $("#AT_B2B").prop('checked', true);
                            //}
                            //else if (AgentStatus == "AT_B2B") {
                            //    $("#AT_B2B").prop('checked', true);
                            //}
                            //else if (AgentStatus == "AT_B2B") {
                            //    $("#AT_B2B").prop('checked', true);
                            //}
                            //else {
                            //    $("#AT_B2B").prop('checked', true);
                            //}
                            $("#Code").prop("disabled", true);
                            $("#btnSave").hide();
                            $("#btnUpdate").show();
                        }
                    }
                });
            });


            //***************************************** Delete *************************************

            $(document).on("click", "#delete", function () {
                var value = $(this).attr("value");
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this voucher data!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Yes, delete it!",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                 function () {
                     $.ajax({
                         url: '@Url.Action("DeleteAgent", "Agent")',
                         contentType: "application/json;charset=utf-8",
                         data: { BusinessId: value },
                         type: 'GET',
                         dataType: 'json',
                         success: function (datas) {
                             if (datas == 0 && datas.length != 0) {
                                 swal("Sorry!! Failed to delete this data.", "fail");
                             }
                             else if (datas == 1) {
                                 loadGridByVNo();
                             }
                         },
                         error: function (datas) {
                             swal(datas, "fail")
                         }
                     });
                 });
            });

            //***************************************** Clear *************************************

            $("#btnClear").on("click", function () {
                //clearAgent();
                location.reload();
            });

            function clearAgent() {
                loadGridByVNo();
                $("#Code").val("");
                $("#Email").val("");
                $("#Name").val("");
                $("#Street").val("");
                $("#City").val("");
                $("#State").val("");
                $("#Zip").val("");
                $("#Country").val("");
                $("#Mobile").val("");
                $("#Phone").val("");
                $("#MarkUpId").val($('#MarkUpId option:first-child').val()).trigger('change.select2');
                $("#Balance").val(0);
                $("#AT_B2B").prop("checked", false);
                $("#AT_B2C").prop("checked", false);
                $("#Code").prop("disabled", false);
                $("#btnSave").show();
                $("#btnUpdate").hide();
            }



        }); //End of Document Ready
    </script>
}